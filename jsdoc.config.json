{
    "source": {
        "include": ["src", "*.js", "*.ts"],
        "includePattern": ".+\\.(js|ts)$",
        "excludePattern": "(node_modules/|docs|dist)"
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/jsdoc",
        "readme": "README.md",
        "package": "package.json"
    },
    "tags": {
        "allowUnknownTags": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": true
        }
    }
}
