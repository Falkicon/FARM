{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@frontend/*": ["src/frontend/*"],
      "@backend/*": ["src/backend/*"]
    },
    "types": ["node"],
    "outDir": "dist/backend",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/backend/**/*",
    "src/shared/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
