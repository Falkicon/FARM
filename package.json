{
  "name": "fabricmill",
  "version": "1.0.0",
  "description": "Modern web application boilerplate with TypeScript, Web Components, and Fastify",
  "type": "module",
  "homepage": "https://falkicon.github.io/fabricmill",
  "documentation": "https://falkicon.github.io/fabricmill",
  "repository": {
    "type": "git",
    "url": "https://github.com/falkicon/fabricmill.git"
  },
  "bugs": {
    "url": "https://github.com/falkicon/fabricmill/issues"
  },
  "keywords": [
    "typescript",
    "web-components",
    "lit",
    "fastify",
    "boilerplate",
    "fullstack"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:backend dev:frontend",
    "dev:frontend": "vite --clearScreen false --logLevel debug",
    "dev:backend": "cross-env NODE_ENV=development node --trace-warnings --import tsx src/backend/index.ts",
    "dev:clean": "npm run kill-ports && npm run dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run migrate:deploy && node dist/server.js",
    "test": "vitest run",
    "test:ui": "playwright test",
    "test:e2e": "playwright test e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md}'",
    "docs:build": "typedoc --tsconfig tsconfig.typedoc.json --options typedoc.config.json",
    "docs:serve": "http-server docs -p 8082",
    "docs": "npm run docs:clean && npm run docs:build && npm run docs:serve",
    "docs:clean": "rimraf docs && kill-port 8080 8081 8082",
    "clean": "run-s cleanup && rimraf dist docs .turbo .next coverage 'node_modules/.cache' 'node_modules/.vite' 'prisma/dev.db'",
    "generate:feature": "node scripts/generate-feature.js",
    "migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "kill-ports": "node scripts/kill-ports.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.1",
    "@prisma/client": "^6.0.1",
    "@sentry/browser": "^8.44.0",
    "@types/systeminformation": "^3.54.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lit": "^3.2.1",
    "lit-element": "^4.1.1",
    "lit-html": "^3.2.1",
    "localforage": "^1.10.0",
    "msw": "^2.6.8",
    "systeminformation": "^5.23.10",
    "universal-router": "^9.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@eslint/config-array": "^0.19.1",
    "@eslint/object-schema": "^2.1.5",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/web-components": "^8.4.7",
    "@storybook/web-components-vite": "^8.4.7",
    "@testing-library/dom": "^10.4.0",
    "@types/dotenv": "^8.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "jsdom": "^25.0.1",
    "kill-port": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.4.49",
    "prisma": "^6.0.1",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typedoc": "^0.27.4",
    "typedoc-plugin-custom-tags": "^1.0.2",
    "typedoc-plugin-markdown": "^4.3.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
