{
  "name": "web-app-boilerplate",
  "version": "1.0.0",
  "description": "Modern web application boilerplate with TypeScript, Web Components, and Fastify",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite --port 3000",
    "dev:backend": "tsx watch src/backend/server.ts",
    "setup": "npm install",
    "build": "vite build && tsc -p tsconfig.backend.json",
    "preview": "vite preview",
    "start": "npm run migrate:deploy && node dist/server.js",
    "test": "vitest run",
    "test:ui": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md}'",
    "docs:build": "typedoc",
    "docs:serve": "vite preview --port 8080 --outDir docs",
    "docs": "npm run docs:build && npm run docs:serve",
    "clean": "rimraf dist docs .turbo .next coverage 'node_modules/.cache' 'node_modules/.vite' 'prisma/dev.db'",
    "generate:feature": "node scripts/generate-feature.js",
    "migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.0",
    "@prisma/client": "^5.10.2",
    "@types/universal-router": "^8.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0",
    "lit": "^3.2.1",
    "lit-element": "^4.1.1",
    "lit-html": "^3.2.1",
    "universal-router": "^9.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.10.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "prisma": "^5.10.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
